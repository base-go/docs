{
  "schemaVersion": 2,
  "templateId": "node",
  "dockerfileLines": [
    "FROM node:lts-alpine as build-stage",
    "WORKDIR /app",
    "COPY package*.json ./",
    "RUN npm install",
    "COPY . .",
    "RUN npm run docs:build",
    "FROM nginx:alpine",
    "COPY --from=build-stage /app/.vitepress/dist /usr/share/nginx/html",
    "EXPOSE 80",
    "CMD [\"nginx\", \"-g\", \"daemon off;\"]"
  ]
}